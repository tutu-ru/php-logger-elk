{
  "name": "tutu-ru/lib-logger-elk",
  "license": "proprietary",
  "description": "Logger for ELK",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "psr/log": "^1.0",
    "tutu-ru/lib-config": "^0.9.2",
    "tutu-ru/lib-metrics": "^0.9.6",
    "tutu-ru/lib-redis": "^0.9.1",
    "tutu-ru/lib-request-metadata": "^0.9.0",
    "php": "^7.1",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "TutuRu\\LoggerElk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TutuRu\\Tests\\LoggerElk\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit -c phpunit.xml --colors=always"
    ],
    "cs": [
      "vendor/bin/phpcs --standard=.phpcs.xml ."
    ]
  }
}
